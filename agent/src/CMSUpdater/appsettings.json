{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    },
    "File": {
      "FileTemplate": "updater_{timestamp}_{version}.log",
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {ThreadId} {Message:lj}{NewLine}{Exception}"
    }
  },
  "Updater": {
    "BackupFolderName": "Backups",
    "BackupNameTemplate": "backup_{timestamp}_{version}",
    "RetryAttempts": 3,
    "RetryDelayMilliseconds": 1000,
    "WaitForProcessTimeoutSeconds": 30,
    "FilesToExcludeFromUpdate": [
      "appsettings.json",
      "*.user.json",
      "logs"
    ]
  }
} 